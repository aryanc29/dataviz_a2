{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "International visitors by state/territory, Year ending March 2025",
  "width": 720,
  "height": 540,
  "projection": {
    "type": "mercator",
    "center": [135, -28],
    "rotate": [0, 0, 0],
    "scale": 700
  },
  "data": {
    "url": "https://raw.githubusercontent.com/aryanc29/dataviz_a2/main/STE_2016_AUST.json",
    "format": {"type": "topojson", "feature": "STE_2016_AUST"}
  },
  "transform": [
    {
      "lookup": "properties.STE_NAME16",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/aryanc29/dataviz_a2/main/visitors_by_state.csv"
        },
        "key": "state",
        "fields": ["trips"]
      }
    }
  ],
  "mark": {"type": "geoshape", "stroke": "#201f1f", "strokeWidth": 0.7},
  "encoding": {
    "color": {
      "field": "trips",
      "type": "quantitative",
      "title": "Visitors",
      "scale": {"scheme": "tealblues"}
    },
    "tooltip": [
      {"field": "properties.STE_NAME16", "title": "State/Territory:"},
      {"field": "trips", "title": "Visitors:", "format": ","}
    ]
  },
  "config": {
    "background": "#f9fafb",
    "view": {"stroke": null},
    "title": {"fontSize": 18, "anchor": "middle", "dy": -10}
  }
}